<%- include("partials/head", {title: "Argentina Programa"}) %>

<body class="flex flex-col min-h-screen bg-white dark:bg-gray-800">
	<%- include("./partials/navbar") %>

	<main class="container mx-auto grow p-4 dark:text-gray-50 text-slate-950">
		<header>
			<h1 class="text-3xl">Bienvenido al Foro</h1>
			<p>¡Únete a la conversación!</p>
			<p class="mt-4">
				<a
					href="/post"
					class="inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
					>Crear publicación</a
				>
			</p>
		</header>

		<!-- Publicaciones del foro aquí -->
		<section class="flex flex-col gap-6 py-4">
			<% if (posts && posts.length > 0) { %> <% posts.forEach(function(post) { %> <%-
			include("./partials/post", {post}) %> <% }) %> <% } else { %>
			<p class="text-xl">No hay publicaciones.</p>
			<% } %>
		</section>
	</main>

	<%- include("partials/footer", {className: "grow"}) %>
</body>
