<a href="<%= `/post/${post.id}`%>">
	<article
		class="flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow md:flex-row md:max-w-xl hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700 group">
		<% if (post.imageUrl) { %>
		<img
			class="object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-l-lg group-hover:contrast-125 transition-all duration-200"
			src="<%= post.imageUrl %>"
			alt="<%= post.title %>" />
		<% } %>
		<div class="flex flex-col justify-between self-start p-4 leading-normal">
			<h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
				<%= post.title %>
			</h5>
			<p class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%= post.content %></p>
		</div>
	</article>
</a>
